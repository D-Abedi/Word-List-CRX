{
  "manifest_version": 3,
  "name": "Word list",
  "version": "4.1.1",
  "description": "Create a list of selected words and export it to a .txt file in the User Download folder.",
  "permissions": ["activeTab","contextMenus", "storage","downloads","scripting"],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
}
